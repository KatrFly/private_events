<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Place:</strong>
  <%= @event.place %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @event.creator.username %>
</p>

<p>
  <strong>Attendees:</strong>
  <% @event.attendees.each do |attendee| %>
    <%= attendee.username %><br>
  <% end %>
</p>

